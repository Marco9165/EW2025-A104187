extends layout

block content
  style.
    .w3-card-4 {
      margin: 25px auto;
      max-width: 850px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      border-radius: 10px;
      overflow: hidden;
      font-family: 'Arial', sans-serif;
    }

    .w3-header {
      background: linear-gradient(45deg, #2c3e50, #3498db);
      color: #ffffff;
      padding: 20px;
      text-align: center;
      font-family: 'Roboto', sans-serif;
    }

    .w3-container {
      padding: 25px;
      background-color: #f8f9fa;
    }

    .w3-input {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border: 1px solid #bdc3c7;
      border-radius: 6px;
      box-sizing: border-box;
      font-size: 16px;
      transition: border-color 0.3s ease;
    }

    .w3-input:focus {
      border-color: #3498db;
      outline: none;
    }

    .w3-button {
      margin: 6px;
      padding: 10px 20px;
      font-size: 14px;
      border: none;
      cursor: pointer;
      border-radius: 25px;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .w3-button.submit {
      background-color: #27ae60;
      color: white;
    }

    .w3-button.submit:hover {
      background-color: #219653;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .w3-button.cancel {
      background-color: #7f8c8d;
      color: white;
    }

    .w3-button.cancel:hover {
      background-color: #636e72;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    footer.w3-footer {
      background: linear-gradient(45deg, #2c3e50, #3498db);
      color: #ffffff;
      padding: 15px;
      text-align: center;
    }

  .w3-card-4
    header.w3-container.w3-header
      h1 Editar Filme
    .w3-container
      form(action=`/filmes/update/${filme.id}`, method="POST")
        label(for="title") Título:
        input.w3-input(type="text", id="title", name="title", value=filme.title, required)

        label(for="year") Ano:
        input.w3-input(type="number", id="year", name="year", value=filme.year, required)

        label(for="cast") Elenco (separado por vírgulas):
        input.w3-input(type="text", id="cast", name="cast", value=filme.cast.join(', '), required)

        label(for="genres") Géneros (separado por vírgulas):
        input.w3-input(type="text", id="genres", name="genres", value=filme.genres.join(', '), required)

        button(type="submit").w3-button.submit
          span ✅ Atualizar Filme
        a(href="/filmes").w3-button.cancel
          span ⬅️ Cancelar

    footer.w3-container.w3-footer
      adress Generated by EW2025 class