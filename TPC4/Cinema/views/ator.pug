extends layout

block content
  style.
    .w3-card-4 {
      margin: 25px auto;
      max-width: 1250px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      border-radius: 10px;
      overflow: hidden;
      font-family: 'Arial', sans-serif;
    }

    .w3-header {
      background: linear-gradient(45deg, #2c3e50, #3498db);
      color: #ffffff;
      padding: 20px;
      text-align: center;
      font-family: 'Roboto', sans-serif;
    }

    .w3-container {
      padding: 25px;
      background-color: #f8f9fa;
    }

    table.w3-table-all {
      width: 100%;
      border-collapse: collapse;
      margin-top: 25px;
      font-size: 16px;
    }

    table.w3-table-all th,
    table.w3-table-all td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }

    table.w3-table-all th {
      background-color: #34495e;
      color: #ffffff;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    table.w3-table-all tr:hover {
      background-color: #eef2f7;
      transform: translateY(-2px);
      transition: all 0.3s ease;
    }

    .w3-button {
      margin: 6px;
      padding: 10px 20px;
      font-size: 14px;
      border: none;
      cursor: pointer;
      border-radius: 25px;
      transition: all 0.3s ease;
      background-color: #7f8c8d;
      color: white;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .w3-button:hover {
      background-color: #636e72;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    footer.w3-footer {
      background: linear-gradient(45deg, #2c3e50, #3498db);
      color: #ffffff;
      text-align: center;
      padding: 15px;
      font-size: 14px;
    }

    .no-films {
      color: #e74c3c;
      font-size: 18px;
      text-align: center;
      margin: 20px 0;
    }

  .w3-card-4
    header.w3-container.w3-header
      h1= autor
    .w3-container
      if filmes && filmes.length > 0
        table.w3-table-all
          tr
            th Ano
            th Título
          each f in filmes
            tr
              td= f.year
              td= f.title
      else
        p.no-films Nenhum filme encontrado para este ator.
    a(href=`/filmes`).w3-button
      span ⬅️ Voltar

    footer.w3-container.w3-footer
      adress Generated by EW2025 class