extends layout

block content
  style.
    .w3-card-4 {
      margin: 25px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      border-radius: 10px;
      font-family: 'Arial', sans-serif;
      transition: all 0.3s ease;
    }

    .w3-card-4:hover {
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      transform: translateY(-3px);
    }

    .w3-header {
      background: linear-gradient(45deg, #2c3e50, #3498db);
      color: #ffffff;
      padding: 20px;
      font-family: 'Roboto', sans-serif;
    }

    .w3-container {
      padding: 25px;
      background-color: #f8f9fa;
    }

    .w3-ul {
      list-style-type: none;
      padding: 0;
    }

    .w3-ul li {
      padding: 12px;
      border-bottom: 1px solid #e0e0e0;
      color: #2c3e50;
      font-size: 16px;
    }

    .w3-ul li:last-child {
      border-bottom: none;
    }

    a {
      color: #3498db;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    a:hover {
      color: #2980b9;
      text-decoration: underline;
    }

    footer.w3-footer {
      background: linear-gradient(45deg, #2c3e50, #3498db);
      color: #ffffff;
      padding: 15px;
      text-align: center;
    }

  .w3-card-4
    header.w3-container.w3-header
      h1= title
    .w3-container
      h2 Dados da Uc:
      ul.w3-ul
        li Docente: #{docente}
        li Instituição: #{instituicao}

      h2 App cinematografia

      ul.w3-ul 
        li 
          a(href='/filmes') Lista de Filmes

    footer.w3-container.w3-footer
      adress Generated by EW2025 class