extends layout

block content
  style.
    .w3-card-4 {
      margin: 25px auto;
      max-width: 1250px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      border-radius: 10px;
      overflow: hidden;
      font-family: 'Arial', sans-serif;
    }

    .w3-header {
      background: linear-gradient(45deg, #2c3e50, #3498db);
      color: #ffffff;
      padding: 20px;
      text-align: center;
      font-family: 'Roboto', sans-serif;
    }

    .w3-container {
      padding: 25px;
      background-color: #f8f9fa;
    }

    table.w3-table-all {
      width: 100%;
      border-collapse: collapse;
      margin-top: 25px;
      font-size: 16px;
    }

    table.w3-table-all th,
    table.w3-table-all td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }

    table.w3-table-all th {
      background-color: #34495e;
      color: #ffffff;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    table.w3-table-all tr {
      transition: all 0.3s ease;
    }

    table.w3-table-all tr:hover {
      background-color: #eef2f7;
      transform: translateY(-2px);
    }

    ul.w3-ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    ul.w3-ul li {
      padding: 6px 0;
      color: #2c3e50;
    }

    .w3-button {
      margin: 6px;
      padding: 10px 20px;
      font-size: 14px;
      border: none;
      cursor: pointer;
      border-radius: 25px;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .w3-button.edit {
      background-color: #27ae60;
      color: white;
    }

    .w3-button.edit:hover {
      background-color: #219653;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .w3-button.delete {
      background-color: #e74c3c;
      color: white;
    }

    .w3-button.delete:hover {
      background-color: #c0392b;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    footer.w3-footer {
      background: linear-gradient(45deg, #2c3e50, #3498db);
      color: #ffffff;
      text-align: center;
      padding: 15px;
      font-size: 14px;
    }

